    <p id="notice"><%= notice %></p>

    <h1 class="jumbotron">Tasks</h1>

    <br><br>

    <%= link_to 'New Task', new_task_path, class: "btn btn-success col-xs-4 col-xs-offset-2" %>

    <div class="container">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Completion Date</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <div align="center">

        </div>
        <tbody>
          <% @task_months.each do |month, tasks| %>
          <% for task in tasks %>
            <tr>
              <td><%= link_to task.name, task %></td>
              <%if task.due_date? %>
                <td>due on <%= task.due_date.strftime("%B %d, %Y")  %></td>
              <% end %>
              <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %></td>
              <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>

    <div align="center">

    </div>
